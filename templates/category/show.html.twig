{# templates/category/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Category {{ category.name }}{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table catégorie {{ category.name }} : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}


    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}