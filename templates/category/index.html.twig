{# templates/category/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories des séries : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} - Catégorie : {{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}